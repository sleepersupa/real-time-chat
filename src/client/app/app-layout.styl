@media (hover:none) {
  /* start mobile styles */
  select, textarea, input[type=”text”], input[type=”password”],
  input[type=”datetime”], input[type=”datetime-local”],
  input[type=”date”], input[type=”month”], input[type=”time”],
  input[type=”week”], input[type=”number”], input[type=”email”],
  input[type=”url”]{ font-size: 16px; }
  /* end mobile styles */
}
.app-layout{
  max-width 500px;
  margin 0 auto;
  color : royal-blue;
  position relative;
  background-color  rgba(230, 234, 235, 0.8);
  -webkit-box-shadow: inset 0px 0px 16px 5px rgba(0,0,0,0.1);
  -moz-box-shadow: inset 0px 0px 16px 5px rgba(0,0,0,0.1);
  box-shadow: inset 0px 0px 16px 5px rgba(0,0,0,0.1);
  .logo-image{
    height 40px;
  }
  .layout-header{
    position absolute;
    width 100%;
    background #daddde
    opacity .9;
    z-index 1;
    .menu-side{
      position fixed;
      z-index 100;
      width 150px;
      transition right .7s cubic-bezier(0.07, 0.21, 0.25, 1)
      -webkit-box-shadow: -15px 14px 30px -13px rgba(0,0,0,0.75);
      -moz-box-shadow: -15px 14px 30px -13px rgba(0,0,0,0.75);
      box-shadow: -15px 14px 30px -13px rgba(0,0,0,0.75);
      background #42a8a6;
      height 100%;
      .menu{
        padding 10px 20px;
        color white;
        border-bottom 1px solid #e3e3e3;
      }
      right -100%;
      &.show{
        right 0;
      }
    }



    &.mobile-header{
      height 40px;
      z-index 1;
      opacity 0.9
      .left{
        float left;
      }



      .right{
        float right;
        margin-right 10px;
      }
    }
    .head-panel{
      padding 10px ;
      width 100%;
      @media (max-width 640px){
        flex-direction column !important;
        .panel-right{
          padding-top 10px;
          .form-group-sl {
            padding-left 0 !important;
          }
        }
      }
      .main-game-image{
        border-radius 8px;
        width 60px;
        height 60px;
      }
      .main-game-name{
        padding-left 20px;
        color white !important;
        font-size 18px;
        font-weight bold;
        display: flex;
        justify-content: center;
        align-items: center;
      }

      .panel-right{
        flex 1 ;
        justify-content space-between;
        align-items: center;
        .form-group-sl{
          margin-bottom 0;
          padding-left 20px;
          &.input-sl{
            flex none !important;
            width : calc(100% - 50px );
          }
          .form-control-sl{
            padding 10px 20px;
          }
        }

        .btn-search{
          width 45px;
          height 45px;
          background #71be9d
          border 1px solid #5e9e83;
          border-radius 6px;
          .fa-search{
            font-size 30px;
            color white;
          }
        }


      }
    }
  }
}