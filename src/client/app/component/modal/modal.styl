.app-modal-list {

  .modal-wrapper{
    background white;
    min-height 200px;
  }
  .app-modal-fade-enter {
    .app-modal-overlay {
      background transparent

      .app-modal-box {
        transform: translate(0, -50%);
        opacity 0;
      }
    }
  }

  .app-modal-fade-enter.app-modal-fade-enter-active {
    .app-modal-overlay {
      background rgba(black, 50%)
      transition: background .3s ease-in-out;

      .app-modal-box {
        opacity 1;
        transform: translate(0, 0);
        transition: transform .3s ease-out,-webkit-transform .3s ease-out, opacity .3s ease-out;
      }

    }
  }

  .app-modal-fade-exit {
    .app-modal-overlay {
      background rgba(black, 50%)

      .app-modal-box {
        transform: translate(0, 0);
        opacity 1;
      }
    }
  }

  .app-modal-fade-exit.app-modal-fade-exit-active {
    .app-modal-overlay {
      background transparent
      transition: background .3s ease-in;

      .app-modal-box {
        opacity 0;
        transition: transform .3s ease-out,-webkit-transform .3s ease-out, opacity .3s ease-out;
        transform: translate(0, -50%);
      }
    }
  }


  .app-modal-overlay {
    position fixed
    width 100%
    height 100%
    top 0
    left 0
    background rgba(black, 50%)
    overflow-y auto
    z-index 20

  }

  .app-modal-box {
    position relative;
    background white;
    box-shadow: 0 2px 5px 0 rgba(0, 0, 0, 0.26);
    margin 10px auto 0 auto;
    border-radius: 5px;
    width calc(100% - 20px);


    @media (min-width 376px) {
      width 600px;
      margin 100px auto 0 auto;
    }
  }


}