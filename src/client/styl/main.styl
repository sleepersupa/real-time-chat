.image-light-dark {
    &:hover {
        filter: brightness(110%);
    }
    &.hide {
        opacity: .3;
        filter: grayscale(30%);
    }
}

i, img {
    cursor pointer
    &.hide {
        opacity: .3;
        filter: grayscale(30%);
    }
}

.content-center {
    text-align center
}

.flex-row {
    display flex;
    flex-direction row ;
    flex-wrap wrap;
}

.flex-column {
    display flex ;
    flex-direction column;
}

@media only screen and (max-width: 800px ) {
    #disqus_thread {
        width 100%;
    }
}


