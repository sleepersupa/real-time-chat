.flex-row{
    display flex ;
    box-sizing: border-box;
    flex-direction row ;
    &.justify-center{
        justify-content center;
    }

    &.justify-start{
        justify-content flex-start;
    }

    &.justify-end{
        justify-content flex-end;
    }
}



.flex-column{
    display flex ;
    box-sizing: border-box;
    flex-direction column ;
}

.text-center{
    text-align center;
}
.text-left {
    text-align left;
}

.text-right {
    text-align right;
}

div, span, input {
